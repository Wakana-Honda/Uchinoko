<div class ="title">
<h3><strong>フードの編集</strong></h3>
</div>

<%= form_with model: @food do |f| %>

 <%= render 'shared/errors', model: f.object %>
 
 <div class="form-group">
  <%= f.label :フード画像 %>
  <%= f.file_field :food_image,accept:"image/*" %>
 </div>
 
 <div class="form-group">
  <%= f.label :フードの名前 %>
  <%= f.text_field :name %>
 </div>
 
 <div class="form-group">
  <%= f.label :genre_id,'ジャンル' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, options = { include_blank: "選択してください" } %>
 </div>
 
 <div class="form-group">
  <%= f.label :type_id,'フードタイプ' %>
  <%= f.collection_select :type_id, Type.all, :id, :name, options = { include_blank: "選択してください" } %>
 </div>
 
 <div class="form-group">
  <%= f.label :メモ %>
  <%= f.text_area :memo %>
 </div>
 
 <%= f.submit '変更を保存する', class:"btn btn-info" %>
 <%= link_to "削除", food_path(@food.id), method: :delete, class:"btn btn-danger" %>

 
<% end %>
