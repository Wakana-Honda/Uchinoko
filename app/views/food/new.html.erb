<div class ="title">
<h3><strong>フードの新規登録</strong></h3>
</div>

<%= form_with model: @food, url:'/food', method: :post do |f| %>
 
 <div class="form-group">
  <%= f.label :フード画像 %>
  <%= f.file_field :food_image,accept:"image/*" %>
 </div>
 
 <div class="form-group">
  <%= f.label :genre_id,'ジャンル' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, options = { include_blank: "選択してください" } %>
 </div>
 
 <div class="form-group">
  <%= f.label :type_id,'フードタイプ' %>
  <%= f.collection_select :type_id, Type.all, :id, :name, options = { include_blank: "選択してください" } %>
 </div>
 
 <div class="form-group">
  <%= f.label :フードの名前 %>
  <%= f.text_field :name %>
 </div>
 <div class="form-group">
  <%= f.label :メモ %>
  <%= f.text_area :memo %>
 </div>
 
 <%= f.submit '登録する' %>
 
<% end %>

<%= link_to "フードジャンルを追加・編集する",genre_index_path %>
<%= link_to "フードタイプを追加・編集する",type_index_path %>
