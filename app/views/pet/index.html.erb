<div class = "title">
 <h3><strong>ウチの子たち</strong></h3>
 <div class = "button">
  <%= button_to 'うちの子を新しく登録する', new_pet_path, method: :get, class:"btn btn-warning" %>
 </div>
</div>

<div class ="wrap around"> 
  <% @pets.each do |pet| %>
   <div class="pet">
    <img class = "image">
    <%= image_tag pet.get_pet_image(50,50) %>
    </img>
    <span class="info">
    <%= pet.name %>
    <%= pet.age %>歳<br>
    <%= pet.birthday %>
    <%= pet.gender_i18n %><br>
    <%= pet.memo %>
    </span>
    <span class = "button">
     <%= link_to edit_pet_path(pet) do %>
      <%= pet.name %>ちゃんを編集する
     <% end %>
     <%= link_to pet_path(pet) do %>
      <%= pet.name %>ちゃんの記録
     <% end %>
     
    </span>
   </div>
  <% end %>
</div>