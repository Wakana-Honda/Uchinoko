
<% @pets.each do |pet| %>
 <div class = "pet_info my-3">
  
  <div class = "row">
   <div class = "col-md-4 my-3 text-center">
    <%= image_tag pet.get_pet_image(100,100),class:"rounded-circle" %>
   </div>
    
   <div class = "col-md-4 pt-3">
    <u class = "px-3">
     <strong><%= pet.name %></strong>
     <strong><%= pet.age %>歳</strong><br>
    </u>
    <li class = "btd"><%= pet.birthday %>生まれ</li>
    <li><%= pet.gender_i18n %></li>
    <li><%= pet.memo %></li>
  </div>
  
  <div class = "col-md-4">
 <!--d-flex flex-column mt-3-->
  <div class="btn-flat-simple">
   <%= link_to edit_pet_path(pet),class:"btn" do %>
    <i class="fas fa-caret-right"></i>
    <%= pet.name %>ちゃんを編集する
   <% end %>
  </div>
  <div class="btn-flat-simple">
   <%= link_to pet_path(pet),class:"btn" do %>
   <i class="fas fa-caret-right"></i>
    <%= pet.name %>ちゃんの記録
   <% end %>
  </div>
   
  </div>
  
 </div>
</div>
<% end %>

<div class="fixed_btn">
 <%= link_to new_pet_path, method: :get, class:"btn btn-warning mr-3" do %>
  <i class="fas fa-paw"></i>
   ウチの子を登録する
  <i class="fas fa-chevron-right"></i>
 <% end %>
</div>