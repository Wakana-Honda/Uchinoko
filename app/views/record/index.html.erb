<!--<= pie_chart Food.group(:name).count %>-->

<table class="table table-light table-striped mt-3">
<% @records.each do |record| %>
  <tr>
  <td><%= record.created_at.strftime('%Y/%m/%d %H:%M') %> </td>
  <td><%= record.pet.name %></td>
  <td><%= record.food.name %></td>
  <td><%= record.amount %></td>
  <td><%= record.memo %></td>
  <td>
   <%= link_to edit_record_path(record) do %>
    <i class="fas fa-edit"></i>
   <% end %>
<!--なしにするかも<= link_to "詳細を見る",record_path(record.id) %>-->
  </td>
  </tr>

<% end %>
</table>



